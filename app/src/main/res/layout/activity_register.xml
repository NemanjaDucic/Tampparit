<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<EditText
    android:id="@+id/email_tf"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:hint="email"
    android:layout_width="0dp"
    android:layout_margin="20dp"
    android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/confirm_email_tf"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email_tf"
        android:hint="confirm email"
        android:layout_width="0dp"
        android:layout_margin="20dp"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/username_tf"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirm_email_tf"
        android:hint="username"
        android:layout_width="0dp"
        android:layout_margin="20dp"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/password_tf"
        android:layout_width="0dp"

        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username_tf"
        android:hint="password"
        android:inputType="textPassword"
        android:layout_height="wrap_content"/>

   <TextView
       app:layout_constraintBottom_toTopOf="@id/type_two_button"
       android:id="@+id/type_of_vehicle_text_view"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/password_tf"
       android:text="type of vehicle"
       android:textSize="18sp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/type_one_button"
        android:layout_width="0dp"
        android:background="@drawable/jet_ski"
        app:layout_constraintBottom_toTopOf="@id/button_register"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/type_two_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/type_of_vehicle_text_view"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/type_two_button"
            android:layout_width="0dp"
            android:background="@drawable/snow_groom"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/type_one_button"
            app:layout_constraintBottom_toTopOf="@+id/button_register"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@id/type_of_vehicle_text_view"/>
    <androidx.appcompat.widget.AppCompatButton
        android:text="Register"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/white"
        android:background="@drawable/round_gray_background"
        android:id="@+id/button_register"
        android:layout_marginBottom="20dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>