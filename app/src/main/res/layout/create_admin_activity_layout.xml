<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/header"
        android:textAlignment="center"
        android:textSize="28sp"
        android:text="Create Admin"/>

    <EditText
        android:layout_margin="20dp"
        android:background="@drawable/et_outline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header"
        android:id="@+id/nameET"
        android:textAlignment="center"

        android:layout_width="0dp"
        android:layout_height="40dp"
        android:hint="name"/>
    <EditText
        android:layout_margin="20dp"
        android:background="@drawable/et_outline"
        android:textAlignment="center"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nameET"
        android:id="@+id/emailET"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:hint="email"/>
    <EditText
        android:layout_margin="20dp"
        android:background="@drawable/et_outline"
        android:id="@+id/passwordET"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emailET"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:hint="password"/>
    <TextView
        android:id="@+id/regionTV"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:text="Region"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/passwordET"
        android:textSize="18sp"/>
<androidx.appcompat.widget.AppCompatSpinner
    android:id="@+id/regionSpinner"
    android:layout_width="0dp"
    android:layout_height="30dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginEnd="20dp"
    android:layout_marginStart="20dp"
    app:layout_constraintTop_toBottomOf="@id/regionTV"
    android:textAlignment="center"/>
    <TextView
        android:id="@+id/cityTV"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:text="City"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/regionSpinner"
        android:textSize="18sp"/>
    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/citySpinner"
        android:layout_width="0dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/cityTV"
        android:textAlignment="center"/>
    <androidx.appcompat.widget.AppCompatButton
        android:text="Create"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/white"
        android:layout_marginBottom="20dp"
        android:background="@drawable/round_gray_background"
        android:id="@+id/buttonCreate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>